<Window x:Class="WPFlab3.NewWeight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFlab3"
        mc:Ignorable="d"
        Title="NewWeight" Height="150" Width="150">
    <Grid>
        <StackPanel>
            <TextBlock> Введите новый вес:</TextBlock>
            <TextBox x:Name="newWeightTb" Margin="5" PreviewTextInput="Digit_PreviewTextInput"></TextBox>
            <Button x:Name="newButtonTb" Margin="5" Click="newButtonTb_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>
